<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление библиотекой" 
        Height="750" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Стиль для центрирования текста в ячейках DataGrid -->
        <Style x:Key="CenterCellStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для Danger кнопки (удаление) -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="BorderBrush" Value="#FFDC143C"/>
            <Setter Property="Foreground" Value="#FFDC143C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFDC143C"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Стиль для рамок -->
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="#FFF5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с заголовком и статистикой -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="УПРАВЛЕНИЕ БИБЛИОТЕКОЙ" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#FF007ACC"
                       Margin="0,0,0,10"/>

            <!-- Статистика -->
            <Border Style="{StaticResource BorderStyle}" Margin="0,10,0,0" Padding="10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Всего книг: " FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="TotalBooksText" Text="0" Margin="0,0,30,0" FontWeight="Bold" Foreground="#FF007ACC" FontSize="16"/>

                    <TextBlock Text="Авторов: " FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="TotalAuthorsText" Text="0" Margin="0,0,30,0" FontWeight="Bold" Foreground="#FF28A745" FontSize="16"/>

                    <TextBlock Text="Жанров: " FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="TotalGenresText" Text="0" FontWeight="Bold" Foreground="#FFDC143C" FontSize="16"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Панель фильтрации -->
        <Border Grid.Row="1" Style="{StaticResource BorderStyle}" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ФИЛЬТРАЦИЯ КНИГ" Style="{StaticResource HeaderStyle}"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поиск по названию -->
                    <TextBlock Text="Название:" 
                               VerticalAlignment="Center" 
                               Grid.Column="0" 
                               Margin="5"
                               FontWeight="SemiBold"/>

                    <TextBox x:Name="SearchTextBox" 
                             Grid.Column="1" 
                             Margin="5" 
                             Height="35"
                             Padding="8"
                             TextChanged="SearchTextBox_TextChanged"
                             BorderBrush="#FFCCCCCC"
                             BorderThickness="1"/>

                    <!-- Фильтр по автору -->
                    <TextBlock Text="Автор:" 
                               VerticalAlignment="Center" 
                               Grid.Column="2" 
                               Margin="15,5,5,5"
                               FontWeight="SemiBold"/>

                    <ComboBox x:Name="AuthorFilterComboBox" 
                              Grid.Column="3" 
                              Margin="5" 
                              Height="35"
                              DisplayMemberPath="FullName"
                              SelectionChanged="Filter_Changed"
                              BorderBrush="#FFCCCCCC"
                              BorderThickness="1"/>

                    <!-- Фильтр по жанру -->
                    <TextBlock Text="Жанр:" 
                               VerticalAlignment="Center" 
                               Grid.Column="4" 
                               Margin="15,5,5,5"
                               FontWeight="SemiBold"/>

                    <ComboBox x:Name="GenreFilterComboBox" 
                              Grid.Column="5" 
                              Margin="5" 
                              Height="35"
                              DisplayMemberPath="Name"
                              SelectionChanged="Filter_Changed"
                              BorderBrush="#FFCCCCCC"
                              BorderThickness="1"/>
                </Grid>

                <!-- Кнопка сброса фильтров -->
                <Button Content="Сбросить фильтры" 
                        Width="140" 
                        Height="35" 
                        Margin="5,10,0,0"
                        HorizontalAlignment="Left"
                        Click="ResetFilters_Click"
                        Background="Transparent"
                        BorderBrush="#FF007ACC"
                        Foreground="#FF007ACC"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Информация о выбранной книге -->
        <Border Grid.Row="2" Style="{StaticResource BorderStyle}" Margin="0,0,0,15" Padding="10">
            <StackPanel>
                <TextBlock Text="ИНФОРМАЦИЯ О ВЫБРАННОЙ КНИГЕ" Style="{StaticResource HeaderStyle}"/>
                <TextBlock x:Name="SelectedBookInfo" 
                           Text="Книга не выбрана" 
                           FontStyle="Italic"
                           Foreground="Gray"
                           FontSize="14"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- DataGrid для отображения книг -->
        <Border Grid.Row="3" Style="{StaticResource BorderStyle}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="СПИСОК КНИГ" 
                           Style="{StaticResource HeaderStyle}" 
                           Margin="15,10,15,5"/>

                <DataGrid x:Name="BooksDataGrid" 
                          Grid.Row="1"
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          Margin="0"
                          RowHeight="40"
                          AlternatingRowBackground="#FFF9F9F9"
                          BorderThickness="0"
                          SelectionChanged="BooksDataGrid_SelectionChanged"
                          MouseDoubleClick="BooksDataGrid_MouseDoubleClick">

                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Background" Value="#FFE5E5E5"/>
                            <Setter Property="Height" Value="45"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>

                        <Style TargetType="DataGridCell">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="50"
                                            ElementStyle="{StaticResource CenterCellStyle}"/>

                        <DataGridTextColumn Header="Название" 
                                            Binding="{Binding Title}" 
                                            Width="250"/>

                        <DataGridTextColumn Header="Автор" 
                                            Binding="{Binding Author.FullName}" 
                                            Width="150"/>

                        <DataGridTextColumn Header="Жанр" 
                                            Binding="{Binding Genre.Name}" 
                                            Width="120"/>

                        <DataGridTextColumn Header="Год издания" 
                                            Binding="{Binding PublishYear}" 
                                            Width="100"
                                            ElementStyle="{StaticResource CenterCellStyle}"/>

                        <DataGridTextColumn Header="ISBN" 
                                            Binding="{Binding ISBN}" 
                                            Width="130"/>

                        <DataGridTextColumn Header="В наличии" 
                                            Binding="{Binding QuantityInStock}" 
                                            Width="80"
                                            ElementStyle="{StaticResource CenterCellStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Панель кнопок управления (только для книг) -->
        <Border Grid.Row="4" Style="{StaticResource BorderStyle}" Margin="0,15,0,0" Padding="10">
            <StackPanel>
                <TextBlock Text="ОПЕРАЦИИ С КНИГАМИ" Style="{StaticResource HeaderStyle}"/>

                <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Добавить книгу" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddBook_Click"/>

                    <Button Content="Редактировать" 
                            Style="{StaticResource ActionButtonStyle}"
                            Click="EditBook_Click"/>

                    <Button Content="Удалить" 
                            Style="{StaticResource DangerButtonStyle}"
                            Click="DeleteBook_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>